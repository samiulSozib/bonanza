<%- include('./partials/header.ejs') %>

	<!-- Hero section -->
	<div class="h-[35vh]" style="background: url('./img/factory-hero-bg.png')">
		<div class="container flex flex-col items-center justify-center h-full mx-auto text-white gap-y-5">
			<h2 class="text-4xl font-bold">Our Factory</h2>
			<div class="text-sm breadcrumbs">
				<ul>
					<li><a href="./index.html">Home</a></li>
					<li class="font-medium">Our Factory</li>
				</ul>
			</div>
		</div>
	</div>

	<!-- Request a callback section -->
	<div class="container flex flex-col items-center px-5 mt-16 gap-y-10 lg:px-0 lg:flex-row gap-x-36">
		<div class="flex flex-col lg:w-3/4 gap-y-20">
			<div class="flex flex-col gap-y-3">
				<p class="font-medium uppercase text-accent">About Factory</p>
				<p class="text-4xl font-bold text-primary">
					We have 12 years experience
				</p>
			</div>
			<div class="flex flex-col gap-y-10">
				<p class="text-xl italic">
					“With over 12 years of industry experience, we have our expertise in
					producing top-quality jute products, delivering excellence to our
					clients.”
				</p>
				<p>
					Our factory is a modern facility specializing in the production of
					high-quality jute yarn, twine, and jute-based products. With
					advanced equipment and a skilled team, we prioritize precision and
					efficiency while maintaining stringent safety standards and
					sustainable practices.
				</p>
			</div>
		</div>
		<div class="flex flex-col shadow-xl w-full rounded-xl lg:w-[50%] gap-y-7">
			<p class="text-2xl font-bold text-white p-7 rounded-xl bg-secondary">
				Request a call back
			</p>
			<div class="flex flex-col w-full p-5 lg:p-5 gap-y-5">
				<!-- <p class="italic">
						Dolor in reprehenderit in voluptate velit esse cillum dolore eu
						fugiat nulla pariatur excepteur sint occaecat
					</p> -->
				<div class="flex flex-col gap-y-5">
					<form id="contactForm">
						<div class="flex flex-col w-full gap-y-5">
							<input class="input input-md lg:input-lg input-bordered" type="text" placeholder="Name"
								name="name" required />
							<input class="input input-md lg:input-lg input-bordered" type="phone" placeholder="Phone" ,
								name="phoneNumber" required />

							<input class="input input-md lg:input-lg input-bordered" type="email"
								placeholder="Email address" , name="email" required />
							<select id="category" name="category"
								class="font-normal select select-md lg:select-lg select-bordered">
								<% for(let dropdown of contactDropdown){ %>
									<option value="<%= dropdown.name %>">
										<%= dropdown.name %>
									</option>
									<% } %>
							</select>

							<textarea class="textarea textarea-md lg:textarea-lg textarea-bordered"
								placeholder="Your message" name="message" required></textarea>

							<button type="submit"
								class="lg:self-center self-start border-0 px-16 text-white normal-case btn btn-lg bg-gradient-to-r from-[#1B8900] to-[#65A184]">
								Submit
							</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>

	<!-- long video section -->
	<div class="container relative flex justify-center px-5 mt-36 lg:px-0">
		<iframe width="900" height="550" src="<%= factory_video[0].link %>"></iframe>
	</div>

	<!-- multiple video section -->
	<div class="container grid px-5 mt-20 lg:px-0 lg:grid-cols-3 gap-x-10 gap-y-20">
		<% for(let i=1;i<factory_video.length;i++){ %>
			<div class="relative flex flex-col gap-y-7">
				<iframe width="350" height="250" src="<%= factory_video[i].link %>"></iframe>
				<div class="flex flex-col gap-y-1">
					<p class="text-2xl font-semibold text-primary">
						<%= factory_video[i].title %>
					</p>

				</div>
			</div>
			<% } %>


	</div>

	<!-- frequently asked question section -->
	<div class="container flex flex-col items-center px-5 lg:px-0 mt-36 gap-y-20">
		<div class="flex flex-col items-center text-center lg:w-1/2 gap-y-3">
			<h2 class="text-4xl font-bold">Frequently Asked Questions</h2>

		</div>
		<div class="lg:w-[60%] join join-vertical">

			<% for(let qa of question_answer){%>

				<div class="border-b rounded-none collapse">
					<input type="checkbox" name="my-accordion-3" />

					<div class="flex items-center text-xl font-medium capitalize collapse-title gap-x-5">
						<p class="accordion-icon">
							<i class="text-3xl bi bi-plus text-secondary"></i>
						</p>
						<%= qa.question %>
					</div>

					<div class="collapse-content text-primary">
						<p>
							<%= qa.answer %>
						</p>
					</div>
				</div>
				<% } %>
		</div>
	</div>

	<!-- Review section -->
	<div class="flex flex-col gap-y-10 lg:flex-row mt-36">
		<div class="lg:w-1/2">
			<img src="./img/factory-bg-2.png" alt="" />
		</div>
		<div class="flex flex-col items-center justify-center px-5 text-center lg:px-0 lg:w-1/2 gap-y-16">
			<div class="flex flex-col items-center text-center lg:w-1/2 gap-y-10">
				<p class="italic text-primary">
					Phasellus ultrices ut tortor at porta. Praesent maximus, lacus sed
					rutrum aliquet, lacus tellus tincidunt nisl, vitae molestie nisi
					sapien et dolor suspendisse mi est
				</p>
				<div class="flex flex-col gap-y-4">
					<p class="flex text-transparent gap-x-2 bg-clip-text bg-gradient">
						<i class="bi bi-star-fill"></i>
						<i class="bi bi-star-fill"></i>
						<i class="bi bi-star-fill"></i>
						<i class="bi bi-star-fill"></i>
						<i class="bi bi-star-fill"></i>
					</p>
					<p class="flex flex-col font-medium text-transparent bg-clip-text bg-gradient">
						Alice Guzman
						<span class="text-[#9C9EA6] font-normal">HSBC Bank</span>
					</p>
				</div>
			</div>
		</div>
	</div>

	<!-- have a question section -->
	<div class="w-full py-5 mt-20 lg:mt-0" style="background: url('./img/factory-bg-3.png')">
		<div class="container flex justify-center py-10 mx-auto lg:py-36 h-fit">
			<div class="flex flex-col justify-center w-full h-full px-5 lg:px-0 lg:w-1/2 gap-y-7">
				<h2 class="text-3xl font-bold text-center text-white lg:text-5xl">
					Have a question?
				</h2>

				<div class="flex flex-col self-center w-full gap-y-5">
					<form id="enquiryForm">
						<div class="grid gap-y-5 lg:grid-cols-2 gap-x-5">

							<input class="w-full input input-bordered" type="text" placeholder="Name" name="name" />
							<input class="input input-bordered" type="phone" placeholder="Phone" name="phoneNumber" />

							<input class="input input-bordered" type="email" placeholder="Email address" name="email" />
							<input class="input input-bordered" type="text" placeholder="Subject" name="subject" />

							<textarea class="textarea textarea-bordered" placeholder="Enquiry"
								name="enquiry"></textarea>

							<button type="submit"
								class="self-start border-0 px-16 text-white normal-case btn bg-gradient-to-r from-[#1B8900] to-[#65A184]">
								Submit
							</button>

						</div>
					</form>
				</div>
			</div>
		</div>

		<script>
			const checkboxes = document.querySelectorAll('.collapse > input');

			console.log(checkboxes);
			checkboxes.forEach((cb) => {
				cb.addEventListener('click', (e) => {
					if (e.target.checked) {
						e.target.parentElement.children[1].children[0].innerHTML = '';
						e.target.parentElement.children[1].children[0].innerHTML =
							'<i class="text-3xl bi bi-dash text-secondary"></i>';
					} else {
						e.target.parentElement.children[1].children[0].innerHTML = '';
						e.target.parentElement.children[1].children[0].innerHTML =
							'<i class="text-3xl bi bi-plus text-secondary"></i>';
					}
				});
			});
		</script>

		<!-- footer section -->
		<%- include('./partials/footer.ejs') %>

			<script>
				getFooterInfo()
				getFooterSocialMedia()
				postContactForm()
				postEnquiryForm()
			</script>

			</body>

			</html>